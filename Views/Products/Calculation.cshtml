<h3>Загальна сума витрат становить: @Html.ViewData.Model.Sum(m => m.Price) грн.</h3>
@{
    try
    {
        <h3>Середня ціна по чеку становить: @Html.ViewData.Model.Average(m => m.Price) грн.</h3>
    }
    catch
    {

    }
}
<d>
    @{
        List<Product> products = new List<Product>(Model);

        if (products.FirstOrDefault()!=null)
        {
        }
        var Average = products
            .Sum(m => m.Price)
            / products
            .GroupBy(m => m.User)
            .Count();

        Product[] max2 = products
            .GroupBy(m => m.User)
            .Select(g => new Product { User = g.Key, Price = g.Sum(p => p.Price) }).ToArray();



       // Product[] Max = products.GroupBy(m => m.User ).ToArray();

        Product[] Max = max2.Where(m => m.Price > Average).ToArray();
        Product[] Min = max2.Where(m => m.Price < Average).ToArray();

        for (int i = 0; i < Max.Length; i++)
        {
            for (int j = 0; j < Min.Length; j++)
            {
                int count = 0;
                while (Min[j].Price != Average)
                {
                    if (Max[i].Price != Average)
                    {
                        Max[i].Price -= 1;
                        Min[j].Price += 1;
                        count++;
                    }
                    if (Min[j].Price == Average)
                    {
                        <li>@Min[j].User в сумі "@count"  має віддати @Max[i].User" </li>
                    }
                    else if (Max[i].Price == Average)
                    {
                        <li>@Min[j].User в сумі @count  має віддати @Max[i].User" </li>
                        i++;
                        count = 0;
                    }
                }
            }
        }
    }
</d>